<header class="navbar navbar-fixed-top navbar-inverse" xmlns="http://www.w3.org/1999/html">
  <div class="container">
    <%= link_to "first app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",  home_path %></li>
        <li><%= link_to "Help",  help_path %></li>
        <li><%= link_to "Users", users_path %></li>
        <% if logged_in? %>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" > <!-- We are making use of bootstraps javascript dropdown menus -->
              Account <b class="caret"></b>
            </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %>
                <li class="divider"></li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li> <!-- browsers only have GET and POST HTTP methods -->
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>