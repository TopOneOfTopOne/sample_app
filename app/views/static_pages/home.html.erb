
<% if logged_in? %>
    <div class="row" xmlns="http://www.w3.org/1999/html">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="col-mid-8">
        <h3>Feed</h3>
        <%= render 'shared/feed_items' %>
      </div>
    </div>
<% else %>
  <div class="center jumbotron">
    <h1> Welcome to the Home Page</h1>

    <h2>
      This is my first rails app :)
    </h2>

    <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <!-- image_tag helper auto finds images in app/assets/images in this case app/assets/images/rails.png-->
  <%= link_to image_tag("rails.png", alt: "Rails logo"),
              'http://rubyonrails.org/' %>
<% end %>